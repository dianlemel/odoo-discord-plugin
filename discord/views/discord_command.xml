<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 列表視圖 -->
        <record id="discord_command_config_view_list" model="ir.ui.view">
            <field name="name">discord.command.config.list</field>
            <field name="model">discord.command.config</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="command_name"/>
                    <field name="command_type"/>
                    <field name="description"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- 表單視圖 -->
        <record id="discord_command_config_view_form" model="ir.ui.view">
            <field name="name">discord.command.config.form</field>
            <field name="model">discord.command.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="command_name" placeholder="例如: buy, 購買"/>
                                <field name="command_type"/>
                            </group>
                            <group>
                                <field name="description" placeholder="選填說明"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 搜尋視圖 -->
        <record id="discord_command_config_view_search" model="ir.ui.view">
            <field name="name">discord.command.config.search</field>
            <field name="model">discord.command.config</field>
            <field name="arch" type="xml">
                <search>
                    <field name="command_name"/>
                    <field name="command_type"/>
                    <filter name="active" string="已啟用" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="已停用" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter name="group_by_type" string="依行為分組" context="{'group_by': 'command_type'}"/>
                </search>
            </field>
        </record>

        <!-- 動作 -->
        <record id="discord_command_config_action" model="ir.actions.act_window">
            <field name="name">指令設定</field>
            <field name="res_model">discord.command.config</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    新增 Discord 指令
                </p>
                <p>
                    設定不同的指令名稱對應到相同的行為。<br/>
                    例如: !buy, !purchase, !購買 都可以觸發購買功能。
                </p>
            </field>
        </record>

        <!-- 選單 -->
        <menuitem id="discord_command_config_menu"
                  name="指令設定"
                  parent="discord_menu_config"
                  action="discord_command_config_action"
                  sequence="15"/>
    </data>
</odoo>
