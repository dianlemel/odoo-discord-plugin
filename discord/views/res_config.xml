<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.project_tracker</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="priority" eval="41"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Discord" string="Discord" name="discord">
                        <block title="Discord" name="discord_block">
                            <setting string="Bot Token">
                                <field password="True" name="bot_token"/>
                            </setting>
                            <setting string="Bot 控制">
                                <button name="action_restart_bot" type="object" string="重啟 Bot" class="btn-primary" icon="fa-refresh"/>
                            </setting>
                        </block>
                        <block title="點數設定" name="points_block">
                            <setting string="點數單價" help="每點多少元">
                                <field name="point_price"/> 元
                            </setting>
                        </block>
                        <block title="贈送公告" name="gift_announcement_block">
                            <setting string="公告頻道 ID" help="贈送點數時發送公告的頻道，模板請至 設定 > 訊息模板 編輯">
                                <field name="gift_announcement_channel" placeholder="例如: 1234567890"/>
                            </setting>
                        </block>
                        <block title="群發通知" name="announce_block">
                            <setting string="允許身分組 ID" help="允許使用 announce 指令的 Discord Role ID，多個以逗號分隔">
                                <field name="discord_announce_allowed_roles" placeholder="例如: 123456789,987654321"/>
                            </setting>
                        </block>
                        <block title="綠界科技" name="ecpay_block">
                            <setting string="測試模式">
                                <field name="ecpay_is_debug"/>
                            </setting>
                            <setting string="商店代號">
                                <field name="ecpay_merchant_id"/>
                            </setting>
                            <setting string="HashKey">
                                <field password="True" name="ecpay_hash_key"/>
                            </setting>
                            <setting string="HashIV">
                                <field password="True" name="ecpay_hash_iv"/>
                            </setting>
                        </block>
                        <block title="歐富寶 (O'Pay)" name="opay_block">
                            <setting string="測試模式">
                                <field name="opay_is_debug"/>
                            </setting>
                            <setting string="商店代號">
                                <field name="opay_merchant_id"/>
                            </setting>
                            <setting string="HashKey">
                                <field password="True" name="opay_hash_key"/>
                            </setting>
                            <setting string="HashIV">
                                <field password="True" name="opay_hash_iv"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>
</odoo>